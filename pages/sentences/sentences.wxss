.all-results-container {
	display: flex;
	flex-direction: column;
	flex: 1;
	box-sizing: border-box;
	padding: 32rpx;
	max-width: 750rpx;
	margin: 0 auto;
	width: 100%;
}
page,
body {
	background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}
/* pages/sentences/sentences.wxss */

.all-results {
	width: 100%;
	box-sizing: border-box;
	padding: 40rpx;
	background: rgba(255, 255, 255, 0.8);
	backdrop-filter: blur(10px);
	border-radius: 24rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
	border: 1px solid rgba(255, 255, 255, 0.5);
	/* Hide scrollbar for WeChat Mini Program */
	-webkit-scrollbar-width: none;
	scrollbar-width: none;
}

/* Hide scrollbar for all-results scroll-view (WeChat Mini Program specific) */
.all-results::-webkit-scrollbar {
	display: none;
}

.all-result-item {
	margin-bottom: 0;
	padding: 32rpx;
	background: transparent;
	border-radius: 0;
	border: none;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	position: relative;
	overflow: hidden;
	border-bottom: 1px solid #e2e8f0;
}

.all-result-item:hover {
	background: rgba(59, 130, 246, 0.02);
	transform: none;
	box-shadow: none;
}

.all-result-item:last-child {
	border-bottom: none;
}

.practice-btn {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 60rpx;
	width: calc(100vw - 64rpx);
	max-width: 680rpx;
	margin: 0 auto;
	background: linear-gradient(135deg, #3b82f6, #1d4ed8);
	color: white;
	font-size: 28rpx;
	font-weight: 500;
	border-radius: 16rpx;
	border: none;
	padding: 24rpx 0;
	box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
	z-index: 100;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.practice-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.25);
}

/* Text styles matching search page */
.search-history-title {
	font-size: 36rpx;
	font-weight: 600;
	color: #1e293b;
	text-shadow: none;
	margin-bottom: 16rpx;
	display: block;
}

.item-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 12rpx;
}

.header-right {
	display: flex;
	align-items: center;
	gap: 16rpx;
}

.more-icon {
	margin-left: 16rpx;
	width: 32rpx;
	height: 32rpx;
	opacity: 0.6;
	transition: opacity 0.3s ease;
}

.more-icon:active {
	opacity: 1;
}

.history-time {
	font-size: 22rpx;
	color: #64748b;
}

.preset-label {
	font-size: 20rpx;
	color: #3b82f6;
	background: rgba(59, 130, 246, 0.1);
	padding: 4rpx 12rpx;
	border-radius: 12rpx;
	border: 1px solid rgba(59, 130, 246, 0.2);
	font-weight: 500;
}

.history-result {
	font-size: 30rpx;
	color: #0f172a;
	line-height: 1.6;
	font-weight: 500;
	margin-bottom: 12rpx;
}

.history-input {
	font-size: 24rpx;
	color: #64748b;
	opacity: 0.8;
	font-style: italic;
}

.empty-state {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 80rpx 40rpx;
	text-align: center;
}

.empty-text {
	font-size: 32rpx;
	color: #64748b;
	margin-bottom: 16rpx;
	font-weight: 500;
}

.empty-tip {
	font-size: 24rpx;
	color: #94a3b8;
	line-height: 1.5;
	opacity: 0.8;
}

.load-more-container {
	display: flex;
	justify-content: center;
	align-items: center;
	padding: 40rpx 0;
}

.loading-more {
	display: flex;
	align-items: center;
	gap: 16rpx;
}

.loading-spinner-small {
	width: 24rpx;
	height: 24rpx;
	border: 2rpx solid rgba(59, 130, 246, 0.2);
	border-top: 2rpx solid #3b82f6;
	border-radius: 50%;
	animation: spin 1s linear infinite;
}

.loading-text-small {
	font-size: 24rpx;
	color: #64748b;
}

.no-more-text {
	font-size: 24rpx;
	color: #94a3b8;
	opacity: 0.7;
}

@keyframes spin {
	0% { transform: rotate(0deg); }
	100% { transform: rotate(360deg); }
}

/* Action Modal */
.action-modal {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: center;
	justify-content: center;
	opacity: 0;
	visibility: hidden;
	transition: all 0.3s ease;
	z-index: 1000;
}

.action-modal.show {
	opacity: 1;
	visibility: visible;
}

.action-modal-content {
	background: white;
	border-radius: 24rpx;
	padding: 40rpx;
	width: 80%;
	max-width: 500rpx;
	transform: scale(0.9);
	transition: transform 0.3s ease;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.action-modal.show .action-modal-content {
	transform: scale(1);
}

.action-item {
	display: flex;
	align-items: center;
	padding: 32rpx 24rpx;
	border-radius: 16rpx;
	margin-bottom: 16rpx;
	transition: background 0.3s ease;
}

.action-item:last-child {
	margin-bottom: 0;
}

.action-item:active {
	background: rgba(0, 0, 0, 0.05);
}

.action-icon {
	width: 40rpx;
	height: 40rpx;
	margin-right: 24rpx;
}

.action-text {
	font-size: 32rpx;
	color: #0f172a;
	font-weight: 500;
}
