.all-results-container {
	display: flex;
	flex-direction: column;
	flex: 1;
	box-sizing: border-box;
	padding: 32rpx;
	max-width: 750rpx;
	margin: 0 auto;
	width: 100%;
}
page,
body {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}
/* pages/sentences/sentences.wxss */

.all-results {
	width: 100%;
	box-sizing: border-box;
	padding: 40rpx;
	background: rgba(255, 255, 255, 0.95);
	backdrop-filter: blur(20px);
	border-radius: 24rpx;
	box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
	border: 1px solid rgba(255, 255, 255, 0.2);
	/* Hide scrollbar for WeChat Mini Program */
	-webkit-scrollbar-width: none;
	scrollbar-width: none;
}

/* Hide scrollbar for all-results scroll-view (WeChat Mini Program specific) */
.all-results::-webkit-scrollbar {
	display: none;
}

.all-result-item {
	margin-bottom: 24rpx;
	padding: 32rpx;
	background: rgba(255, 255, 255, 0.6);
	border-radius: 16rpx;
	border: 1px solid rgba(255, 255, 255, 0.3);
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	position: relative;
	overflow: hidden;
}

.all-result-item:hover {
	transform: translateY(-2rpx);
	box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.all-result-item:last-child {
	margin-bottom: 0;
}

.practice-btn {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 60rpx;
	width: calc(100vw - 64rpx);
	max-width: 680rpx;
	margin: 0 auto;
	background: linear-gradient(135deg, #667eea, #764ba2);
	color: white;
	font-size: 32rpx;
	font-weight: 500;
	border-radius: 16rpx;
	border: none;
	padding: 24rpx 0;
	box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
	z-index: 100;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.practice-btn:active {
	transform: translateY(2rpx);
	box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* Text styles matching search page */
.history-time {
	font-size: 22rpx;
	color: #999;
	margin-bottom: 12rpx;
}

.history-result {
	font-size: 30rpx;
	color: #333;
	line-height: 1.6;
	font-weight: 500;
	margin-bottom: 12rpx;
}

.history-input {
	font-size: 24rpx;
	color: #888;
	opacity: 0.8;
	font-style: italic;
}
