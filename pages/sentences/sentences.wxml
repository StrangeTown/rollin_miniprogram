<!--pages/sentences/sentences.wxml-->
<navigation-bar title="Sentences" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="all-results-container" style="height: calc(100vh - 140px);">
  <text style="font-weight:bold;display:block;margin-bottom:8px;">All Results:</text>
  <scroll-view show-scrollbar="{{false}}" class="all-results" scroll-y="true" style="height: calc(100vh - 120px);">
    <block wx:for="{{allResults}}" wx:key="index">
      <view class="all-result-item">
        <view class="history-time">{{item.createdAt}}</view>
        <view class="history-result">{{item.target}}</view>
        <view class="history-input">{{item.content}}</view>
      </view>
    </block>
    <view style="height: 60px;"></view>
  </scroll-view>
</view>
<button class="practice-btn" bindtap="goToPractice">Go to Practice</button>