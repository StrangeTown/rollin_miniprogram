.practice-container {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx;
  margin: 48rpx auto;
  max-width: 680rpx;
}

.practice-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.practice-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
}
.practice-result {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 12rpx;
}
.practice-input {
  font-size: 24rpx;
  color: #888;
  opacity: 0.8;
  font-style: italic;
}
.practice-empty {
  text-align: center;
  color: #aaa;
  font-size: 28rpx;
  padding: 40rpx 0;
}
