page, body {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* pages/practice/practice.wxss */
.practice-container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.practice-item {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 80rpx 40rpx 40rpx;
  margin-bottom: 40rpx;
  min-height: 400rpx;
  max-height: 800rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 2px solid rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.practice-item.updating {
  transform: scale(0.95) rotateY(10deg);
  opacity: 0.7;
}

.practice-item.updated {
  transform: scale(1.05);
  box-shadow: 0 25rpx 80rpx rgba(102, 126, 234, 0.3);
  border-color: rgba(102, 126, 234, 0.6);
}

.practice-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s;
}

.practice-item:active::before {
  left: 100%;
}

.practice-item:hover {
  transform: translateY(-8rpx) rotateX(5deg);
  box-shadow: 0 30rpx 80rpx rgba(0, 0, 0, 0.2);
  border-color: rgba(102, 126, 234, 0.4);
}

.practice-time {
  font-size: 20rpx;
  color: #bbb;
  margin-bottom: 20rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.practice-input {
  font-size: 36rpx;
  color: #333;
  opacity: 1;
  font-weight: 500;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  line-height: 1.4;
  text-align: center;
  white-space: pre-wrap;
  max-height: 120rpx;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.practice-result {
  font-size: 32rpx;
  color: #333;
  line-height: 1.4;
  font-weight: 600;
  margin-bottom: 0;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  text-align: center;
  white-space: pre-wrap;
  max-height: 150rpx;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 0 20rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.practice-tip {
  font-size: 22rpx;
  color: #999;
  line-height: 1.3;
  font-weight: 400;
  margin-bottom: 0;
  opacity: 0.7;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  text-align: center;
  box-sizing: border-box;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.practice-btn-group {
  display: flex;
  margin-top: 24rpx;
}

.practice-btn {
  flex: 1;
  padding: 24rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: rgba(255, 255, 255, 0.8);
  color: #666;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.practice-btn:last-child {
  margin-left: 16rpx;
}

.practice-btn.remember {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.practice-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.practice-btn.remember:active {
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.practice-empty {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}