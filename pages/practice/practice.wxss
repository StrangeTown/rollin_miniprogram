page, body {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* pages/practice/practice.wxss */
.practice-container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.practice-item {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 80rpx 40rpx 40rpx;
  margin-bottom: 40rpx;
  min-height: 400rpx;
  max-height: 800rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.practice-item.updating {
  transform: scale(0.95) rotateY(10deg);
  opacity: 0.7;
}

.practice-item.updated {
  transform: scale(1.05);
  box-shadow: 0 8rpx 25rpx rgba(59, 130, 246, 0.15);
  border-color: rgba(59, 130, 246, 0.3);
}

.practice-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s;
}

.practice-item:active::before {
  left: 100%;
}

.practice-item:hover {
  transform: translateY(-8rpx) rotateX(5deg);
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
  border-color: rgba(59, 130, 246, 0.2);
}

.item-header {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.practice-time {
  font-size: 20rpx;
  color: #64748b;
}

.preset-label {
  font-size: 18rpx;
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  border: 1px solid rgba(59, 130, 246, 0.2);
  font-weight: 500;
}

.practice-input {
  font-size: 36rpx;
  color: #0f172a;
  opacity: 1;
  font-weight: 500;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  line-height: 1.4;
  text-align: center;
  white-space: pre-wrap;
  max-height: 120rpx;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.practice-result {
  font-size: 32rpx;
  color: #0f172a;
  line-height: 1.4;
  font-weight: 600;
  margin-bottom: 0;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  text-align: center;
  white-space: pre-wrap;
  max-height: 150rpx;
  overflow-y: auto;
  box-sizing: border-box;
  padding: 0 20rpx;
  min-height: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.target-text {
  width: 100%;
  margin-bottom: 24rpx;
}

.speaker-container {
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.speaker-container:active {
  background: rgba(59, 130, 246, 0.1);
  transform: scale(0.95);
}

.speaker-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.practice-tip {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.3;
  font-weight: 400;
  margin-bottom: 0;
  opacity: 0.8;
  width: 100%;
  max-width: 100%;
  word-wrap: break-word;
  text-align: center;
  box-sizing: border-box;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.practice-btn-group {
  display: flex;
  margin-top: 24rpx;
}

.practice-btn {
  flex: 1;
  padding: 24rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: rgba(255, 255, 255, 0.9);
  color: #64748b;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
}

.practice-btn:last-child {
  margin-left: 16rpx;
}

.practice-btn.remember {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
  border: none;
}

.practice-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.practice-btn.remember:active {
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.25);
}

.practice-empty {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  color: #64748b;
  font-size: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
}