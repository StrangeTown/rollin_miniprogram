page, body {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* pages/search/search.wxss */
.search-container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.input-result-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.search-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2px solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
  outline: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 96rpx;
  line-height: 1.5;
}

.search-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
  background: rgba(255, 255, 255, 1);
}

.translated-result {
  margin-top: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 16rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.translated-result::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 16rpx;
}

.recent-results {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.recent-result-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.recent-result-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.recent-result-item:last-child {
  margin-bottom: 0;
}

.more-btn {
  width: 100%;
  margin-top: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.more-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* Text styles for better readability */
.source-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.result-text {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
  line-height: 1.6;
  position: relative;
  z-index: 1;
}

.history-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.history-result {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.history-input {
  font-size: 24rpx;
  color: #888;
  opacity: 0.8;
  font-style: italic;
}