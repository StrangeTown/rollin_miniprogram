/* pages/search/search.wxss */

.search-input {
  width: 100%;
  max-width: 360px;
  margin: 24px auto 12px auto;
  padding: 14px 18px;
  border: 1px solid #ccc;
  border-radius: 18px;
  background: #fff;
  font-size: 16px;
  color: #333;
  box-sizing: border-box;
  outline: none;
  transition: border-color 0.2s;
  height: 72px;
  resize: none;
  line-height: 24px;
}
.search-input:focus {
  border-color: #888;
}

.recent-results {
  margin: 24px auto 0 auto;
  max-width: 360px;
  padding: 12px 18px;
  background: #f7f8fa;
  border-radius: 10px;
}
.recent-result-item {
  margin: 12px 0;
  padding: 16px 18px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  color: #222;
  font-size: 15px;
  text-align: left;
  min-height: 24px;
}

.recent-result-item.current {
  background: #eaf4ff;
}
