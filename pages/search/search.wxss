page, body {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* pages/search/search.wxss */
.search-container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.input-result-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.search-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 1px solid #e2e8f0;
  border-radius: 16rpx;
  background: white;
  font-size: 32rpx;
  color: #0f172a;
  box-sizing: border-box;
  outline: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-height: 96rpx;
  line-height: 1.5;
}

.search-input:focus {
  border-color: #3b82f6;
  box-shadow: 0 0 0 3rpx rgba(59, 130, 246, 0.1);
  background: white;
}

.search-input[disabled] {
  background: #f8fafc;
  color: #64748b;
  cursor: not-allowed;
  opacity: 0.7;
}

.points-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.4;
  white-space: nowrap;
  text-align: center;
  display: flex;
  flex-direction: row;
  opacity: 0.5;
}

.points-link {
  color: #3b82f6;
  text-decoration: underline;
  cursor: pointer;
}

.points-link:active {
  opacity: 0.7;
}

.highlight {
  color: #3b82f6;
  font-weight: 600;
  display: inline;
}

.translated-result {
  margin-top: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border-radius: 16rpx;
  color: white;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  opacity: 0.8;
}

.recent-results {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.recent-result-item {
  margin-bottom: 0;
  padding: 32rpx;
  background: transparent;
  border-radius: 0;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid #e2e8f0;
}

.recent-result-item:hover {
  background: rgba(59, 130, 246, 0.02);
  transform: none;
  box-shadow: none;
}

.recent-result-item:last-child {
  border-bottom: none;
}

.more-btn {
  width: 100%;
  margin-top: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
}

.more-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.25);
}

/* Text styles for better readability */
.source-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
  word-wrap: break-word;
  word-break: break-word;
  line-height: 1.4;
}

.result-text {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
  line-height: 1.6;
  margin-bottom: 24rpx;
  word-wrap: break-word;
  word-break: break-word;
}

.copy-btn-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.copy-btn {
  flex: none;
  border-radius: 6rpx;
  font-size: 20rpx;
  padding: 0;
  line-height: 1;
  margin: 0;
  transition: all 0.3s ease;
  flex-shrink: 0;
  width: 46rpx !important;
  height: 46rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.copy-btn::after {
  border: none;
}

.copy-icon {
  width: 32rpx;
  height: 32rpx;
}

.copy-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-time {
  font-size: 22rpx;
  color: #64748b;
}

.preset-label {
  font-size: 20rpx;
  color: #3b82f6;
  background: rgba(59, 130, 246, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(59, 130, 246, 0.2);
  font-weight: 500;
}

.history-result {
  font-size: 30rpx;
  color: #0f172a;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.history-input {
  font-size: 24rpx;
  color: #64748b;
  opacity: 0.8;
  font-style: italic;
}