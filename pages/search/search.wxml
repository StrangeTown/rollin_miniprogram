<!--pages/search/search.wxml-->
<navigation-bar title="搜索" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="search-container">
  <view class="input-result-card">
    <input class="search-input" placeholder="请输入要搜索的内容" focus="{{true}}" bindconfirm="onConfirm" value="{{searchValue}}" />
    <view class="translated-result" wx:if="{{translatedResult}}">
      <view style="font-size:13px;color:#888;">{{translatedSource}}</view>
      <view style="font-size:15px;color:#222;margin-top:2px;">{{translatedResult}}</view>
    </view>
  </view>
  <view class="recent-results">
    <block wx:if="{{translatedResult}}">
      <block wx:for="{{recentResults}}" wx:key="index">
        <block wx:if="{{index > 0}}">
          <view class="recent-result-item">
            <view style="font-size:13px;color:#888;">{{item.input}}</view>
            <view style="font-size:12px;color:#aaa;">{{item.createdAt}}</view>
            <view style="font-size:15px;color:#222;margin-top:2px;">{{item.result}}</view>
          </view>
        </block>
      </block>
    </block>
    <block wx:else>
      <block wx:for="{{recentResults}}" wx:key="index">
        <view class="recent-result-item">
          <view style="font-size:13px;color:#888;">{{item.input}}</view>
          <view style="font-size:12px;color:#aaa;">{{item.createdAt}}</view>
          <view style="font-size:15px;color:#222;margin-top:2px;">{{item.result}}</view>
        </view>
      </block>
    </block>
    <button class="more-btn" bindtap="goToSentences">More</button>
  </view>
</view>