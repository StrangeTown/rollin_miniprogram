/* pages/settings/settings.wxss */

.container {
  padding: 32rpx;
  background: #f7f8fa;
  min-height: 100vh;
}

.settings-list {
  width: 100%;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f1f5f9;
  background: white;
  transition: background-color 0.2s ease;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background: #f8fafc;
}

.settings-button {
  width: 100% !important;
  border: none;
  border-radius: 0;
  font-size: inherit;
  text-align: left;
  margin: 0;
  line-height: normal;
  border: none !important;
  border-bottom: 1rpx solid #f1f5f9 !important;
}

.settings-button::after {
  border: none;
}

.settings-item-left {
  display: flex;
  align-items: center;
}

.settings-item-title {
  font-size: 32rpx;
  color: #1e293b;
  font-weight: 400;
}

.settings-item-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.flag-emoji {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* Language selection modal styles */
.language-list {
  max-height: 60vh;
  overflow-y: auto;
}

.language-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f1f5f9;
  background: white;
  transition: background-color 0.2s ease;
  cursor: pointer;
}

.language-item:last-child {
  border-bottom: none;
}

.language-item:active {
  background: #f0f9ff;
}

.language-item:hover {
  background: #f8fafc;
}

.language-name {
  font-size: 30rpx;
  color: #1e293b;
  font-weight: 400;
  flex: 1;
}

.language-code {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 300;
  opacity: 0.8;
}
