/* pages/points-records/points-records.wxss */

.container {
  padding: 0 32rpx;
  background: linear-gradient(180deg, #f1f5f9 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* Loading state */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* Empty state */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* Scroll view */
.records-scroll-view {
  height: calc(100vh - 88rpx); /* Adjust based on navigation bar height */
  padding: 20rpx 0;
}

.records-list {
  padding-bottom: 40rpx;
}

/* Record item */
.record-item {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 20rpx;
  padding: 36rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.record-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.record-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.record-type {
  font-size: 34rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.record-time {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 400;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 120rpx;
}

.record-amount {
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.record-amount.positive {
  color: #10b981;
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.record-amount.negative {
  color: #ef4444;
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.record-remain {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
  background-color: #f1f5f9;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

/* Record remark */
.record-remark {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e2e8f0;
}

.remark-text {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.5;
  background-color: #f8fafc;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #3b82f6;
}

/* Load more container */
.load-more-container {
  margin-top: 20rpx;
}

.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-more-text {
  color: #999;
  font-size: 26rpx;
}

/* No more data */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.no-more-text {
  color: #ccc;
  font-size: 24rpx;
}