/* pages/home.wxss */

.container {
  width: 100%;
  min-height: 50vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 32px;
  box-sizing: border-box;
}

.fake-input {
  display: block;
  width: 90%;
  margin: 16px auto;
  padding: 14px 20px;
  border: 1px solid #ccc;
  border-radius: 999px;
  background: #f7f8fa;
  font-size: 16px;
  color: #333;
  box-sizing: border-box;
  box-shadow: 0 1px 2px rgba(0,0,0,0.03);
  transition: transform 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.4s cubic-bezier(0.4,0,0.2,1);
  overflow: hidden;
  position: relative;
}

.fake-input-placeholder {
  visibility: hidden;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 14px;
  font-weight: 400;
  color: #888;
  white-space: nowrap;
}

/* Animate only the text inside fake-input */
.phrase-text {
  display: inline-block;
  font-size: 14px;
  color: #888;
  font-weight: 400;
  transition: transform 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.4s cubic-bezier(0.4,0,0.2,1);
}
.phrase-enter {
  opacity: 0;
  transform: translateY(30px);
}
.phrase-enter-active {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave-active {
  opacity: 0;
  transform: translateY(-30px);
}

.input-title {
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  margin-top: 18px;
  margin-bottom: 4px;
  color: #222;
}