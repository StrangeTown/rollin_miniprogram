page, body {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* Navigation points styling */
.nav-points {
  display: flex;
  align-items: center;
  padding: 6rpx 16rpx;
  margin-left: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 50rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
}

.nav-points:active {
  transform: translateY(-1rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background: rgba(255, 255, 255, 0.95);
}

.points-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

.points-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

/* pages/home.wxss */

.container {
  width: 100%;
  min-height: 50vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 88rpx 32rpx;
  box-sizing: border-box;
}

.fake-input {
  display: block;
  width: 100%;
  max-width: 680rpx;
  margin: 32rpx auto;
  padding: 24rpx 32rpx;
  border: 1px solid #e2e8f0;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  font-size: 32rpx;
  color: #0f172a;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.fake-input:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
  border-color: #cbd5e1;
}

.fake-input-placeholder {
  visibility: hidden;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 28rpx;
  font-weight: 400;
  color: #64748b;
  white-space: nowrap;
}

.home-links {
  margin-top: 48rpx;
  margin-bottom: 16rpx;
  width: 100%;
  max-width: 680rpx;
}

.home-links-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.home-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #0f172a;
  font-size: 22rpx;
  font-weight: 500;
  padding: 42rpx 12rpx;
  border-radius: 16rpx;
  background: white;
  border: 1px solid #e2e8f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: center;
  width: calc(33.333% - 44rpx);
  margin-right: 16rpx;
}

.home-link:last-child {
  margin-right: 0;
}

.home-link:active {
  background: #f8fafc;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  border-color: #cbd5e1;
}

/* Animate only the text inside fake-input */
.phrase-text {
  display: inline-block;
  font-size: 28rpx;
  color: #64748b;
  font-weight: 400;
  transition: transform 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.4s cubic-bezier(0.4,0,0.2,1);
}
.phrase-enter {
  opacity: 0;
  transform: translateY(60rpx);
}
.phrase-enter-active {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave-active {
  opacity: 0;
  transform: translateY(-60rpx);
}

.input-title {
  text-align: center;
  margin-top: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-title-icon { /* 93*41 */
  width: 240rpx;
  height: 100rpx;
  max-width: 80%;
  opacity: 0.9;
  transition: all 0.3s ease;
}

/* Icon and text styles for home links */
.home-link-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.home-link-text {
  font-size: 22rpx;
  font-weight: 500;
  color: #0f172a;
  line-height: 1.2;
}

.home-link:active .home-link-icon {
  opacity: 0.6;
  transform: scale(0.95);
}

/* Subtle slogan at bottom */
.slogan-container {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
}

.slogan {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-bottom: 24rpx;
}

.slogan-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.5;
}

.slogan-text {
  font-size: 24rpx;
  color: #94a3b8;
  opacity: 0.6;
  font-weight: 700;
  letter-spacing: 1rpx;
  line-height: 1.4;
}

.slogan-buttons {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.slogan-btn {
  display: inline-block;
  width: 160rpx !important;
  font-size: 20rpx;
  color: #94a3b8;
  background: transparent;
  border: none;
  padding: 0;
  line-height: 1;
  font-weight: 300;
  opacity: 0.8;
  transition: all 0.2s ease;
}

.slogan-btn:active {
  opacity: 1;
  color: #64748b;
}

.slogan-btn::after {
  border: none;
}

.slogan-divider {
  width: 1rpx;
  height: 24rpx;
  background: #94a3b8;
  opacity: 0.3;
}

/* Share Modal Styles */
.share-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.share-modal.show {
  opacity: 1;
  visibility: visible;
}

.share-modal-content {
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 32rpx;
  width: 100%;
  max-width: 750rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.share-modal.show .share-modal-content {
  transform: translateY(0);
}

.share-modal-title {
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #475569;
  margin-bottom: 32rpx;
}

.share-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.share-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background: transparent;
  padding: 24rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  margin: 0;
  width: 214rpx !important;
}

.share-btn-item:active {
  background: #f8fafc;
}

.share-btn-item::after {
  border: none;
}

.share-btn-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.8;
}

.share-btn-text {
  width: 100%;
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
  white-space: normal;
  text-align: center;
  line-height: 1.3;
  word-break: break-word;

  white-space: normal !important;   /* 强制允许换行 */
  word-break: break-word !important; 
}

.cancel-btn {
  width: 100% !important;
  padding: 24rpx;
  background: #f8fafc;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  margin: 0;
}

.cancel-btn::after {
  border: none;
}

.cancel-btn:active {
  background: #e2e8f0;
}