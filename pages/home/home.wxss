page, body {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}
/* pages/home.wxss */

.container {
  width: 100%;
  min-height: 50vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 64rpx 32rpx;
  box-sizing: border-box;
}

.fake-input {
  display: block;
  width: 100%;
  max-width: 680rpx;
  margin: 32rpx auto;
  padding: 24rpx 32rpx;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.fake-input:active {
  transform: translateY(-4rpx);
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.15);
  border-color: rgba(255, 255, 255, 0.5);
}

.fake-input-placeholder {
  visibility: hidden;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 28rpx;
  font-weight: 400;
  color: #888;
  white-space: nowrap;
}

.home-links {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.home-link {
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-right: 24rpx;
}

.home-link:last-child {
  margin-right: 0;
}

.home-link:active {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* Animate only the text inside fake-input */
.phrase-text {
  display: inline-block;
  font-size: 28rpx;
  color: #888;
  font-weight: 400;
  transition: transform 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.4s cubic-bezier(0.4,0,0.2,1);
}
.phrase-enter {
  opacity: 0;
  transform: translateY(60rpx);
}
.phrase-enter-active {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave-active {
  opacity: 0;
  transform: translateY(-60rpx);
}

.input-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 36rpx;
  margin-bottom: 8rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}