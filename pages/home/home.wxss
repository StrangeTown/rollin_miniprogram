page, body {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}
/* pages/home.wxss */

.container {
  width: 100%;
  min-height: 50vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 88rpx 32rpx;
  box-sizing: border-box;
}

.fake-input {
  display: block;
  width: 100%;
  max-width: 680rpx;
  margin: 32rpx auto;
  padding: 24rpx 32rpx;
  border: 1px solid #e2e8f0;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  font-size: 32rpx;
  color: #0f172a;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  position: relative;
}

.fake-input:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
  border-color: #cbd5e1;
}

.fake-input-placeholder {
  visibility: hidden;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 28rpx;
  font-weight: 400;
  color: #64748b;
  white-space: nowrap;
}

.home-links {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 48rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.home-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #0f172a;
  font-size: 24rpx;
  font-weight: 500;
  padding: 32rpx 24rpx;
  border-radius: 20rpx;
  background: white;
  border: 1px solid #e2e8f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 120rpx;
  text-align: center;
  margin-right: 24rpx;
}

.home-link:last-child {
  margin-right: 0;
}

.home-link:active {
  background: #f8fafc;
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
  border-color: #cbd5e1;
}

/* Animate only the text inside fake-input */
.phrase-text {
  display: inline-block;
  font-size: 28rpx;
  color: #64748b;
  font-weight: 400;
  transition: transform 0.4s cubic-bezier(0.4,0,0.2,1), opacity 0.4s cubic-bezier(0.4,0,0.2,1);
}
.phrase-enter {
  opacity: 0;
  transform: translateY(60rpx);
}
.phrase-enter-active {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave {
  opacity: 1;
  transform: translateY(0);
}
.phrase-leave-active {
  opacity: 0;
  transform: translateY(-60rpx);
}

.input-title {
  text-align: center;
  margin-top: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-title-icon { /* 93*41 */
  width: 240rpx;
  height: 100rpx;
  max-width: 80%;
  opacity: 0.9;
  transition: all 0.3s ease;
}

/* Icon and text styles for home links */
.home-link-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  opacity: 0.8;
  transition: all 0.3s ease;
}

.home-link-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #0f172a;
  line-height: 1.2;
}

.home-link:active .home-link-icon {
  opacity: 0.6;
  transform: scale(0.95);
}

/* Subtle slogan at bottom */
.slogan {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding: 0 32rpx;
}

.slogan-text {
  font-size: 20rpx;
  color: #94a3b8;
  opacity: 0.6;
  font-weight: 300;
  letter-spacing: 1rpx;
  line-height: 1.4;
}