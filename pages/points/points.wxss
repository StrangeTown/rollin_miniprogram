page, body {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
}

/* pages/points/points.wxss */
.points-container {
  padding: 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.points-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
  text-align: center;
}

.points-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.points-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.points-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #0f172a;
}

.points-display {
  font-size: 96rpx;
  font-weight: 700;
  color: #3b82f6;
  margin: 32rpx 0;
  text-shadow: 0 2rpx 4rpx rgba(59, 130, 246, 0.1);
}

.points-subtitle {
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 8rpx 12rpx;
}

.points-subtitle:active {
  transform: scale(0.98);
}

.subtitle-content {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #9ca3af;
  padding-bottom: 2rpx;
  opacity: 0.8;
}

.subtitle-content:active {
  border-bottom-color: #6b7280;
  opacity: 1;
}

.subtitle-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  opacity: 0.6;
}

.subtitle-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.earn-points-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.share-points-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
}

.earn-header {
  margin-bottom: 32rpx;
}

.share-header {
  margin-bottom: 32rpx;
}

.earn-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 12rpx;
}

.share-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 12rpx;
}

.earn-subtitle {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
}

.share-subtitle {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
}

.watch-ad-btn {
  width: 100% !important;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border: none; 
  border-radius: 16rpx;
  padding: 32rpx 40rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.share-btn {
  width: 100% !important;
  background: linear-gradient(135deg, #10b981, #059669);
  border: none; 
  border-radius: 16rpx;
  padding: 32rpx 40rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.watch-ad-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(59, 130, 246, 0.4);
}

.share-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(16, 185, 129, 0.4);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 28rpx;
}

.points-records-link {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  margin-top: 32rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.5);
  transition: all 0.3s ease;
}

.points-records-link:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.08);
}

.records-link-text {
  font-size: 30rpx;
  color: #0f172a;
  font-weight: 500;
}

.records-link-arrow {
  font-size: 28rpx;
  color: #64748b;
  opacity: 0.7;
}

/* Custom Modal Styles */
.modal-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-container {
  width: 600rpx;
  max-width: 90%;
  max-height: 80%;
  background: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
}

.modal-content {
  flex: 1;
  padding: 24rpx 32rpx;
  max-height: 400rpx;
}

.rule-item {
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.rule-text {
  font-size: 28rpx;
  color: #374151;
  display: block;
}

.no-rules {
  text-align: center;
  padding: 40rpx 0;
}

.no-rules-text {
  font-size: 28rpx;
  color: #9ca3af;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: center;
}

.modal-close-btn {
  width: 200rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}